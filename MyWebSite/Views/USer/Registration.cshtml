@model MyWebSite.Models.Reg


@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Layout/_LayoutPage.cshtml";
}
<link href="~/Content/css/register.css" rel="stylesheet" />

@using (Html.BeginForm("Registration", "USer", FormMethod.Post, new { style = " margin-top:100px", @class = "form" }))
{ 
    <section class="login-form content">
        <div>
            <h1>ĐĂNG KÍ TẠI ĐÂY</h1>
            <p id="notvalid" runat="server" visible="false" class="text-error" style="color:red">
                @ViewBag.Error
            </p>
            <div class="form-group">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đăng nhập" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", placeholder = "Mật khẩu mới" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.RePassWord, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập lại mật khẩu" } })
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" onclick="register();">Đăng kí</button>
            </div>
            <a href="/user/login" style="padding-top: 20px !important; float: right; ">Quay lại đăng nhập</a>
            <a href="/home/homepage" style="padding-top: 20px !important; float: left; ">Trang chủ</a>
        </div>
    </section>

}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function register() {
        var Password = document.getElementById("PassWord").value;
        var PasswordAgain = document.getElementById("RePassWord").value;
        var error = document.getElementById("notvalid");
        if (Password != PasswordAgain) {
            error.innerHTML = "Mật khẩu không trùng khớp";
        }
        else {
            $('#Action').val('Registration');
            $("form").submit();
        }
    }
    
</script>